{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "ordered-imports": false,
        "max-line-length": false, // due to hardcoded svg icons
        "interface-name": [
            true,
            "never-prefix"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "no-var-requires": false,
    },
    "rulesDirectory": []
}